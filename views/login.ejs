<%- include('partials/header') %>
  <div class="page page--center auth-page">
    <div class="auth-card">
      <div class="auth-card__brand">
        <svg class="icon auth-card__icon" aria-hidden="true"><use href="#icon-gauge"/></svg>
        <h1 class="auth-card__title">Log in</h1>
        <p class="auth-card__subtitle">Sign in to your UPGS Perf account</p>
      </div>
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="auth-error" role="alert">
          <svg class="icon auth-error__icon" aria-hidden="true"><use href="#icon-alert"/></svg>
          <span><%= error %></span>
        </div>
      <% } %>
      <form action="/login" method="post" class="auth-form">
        <% if (typeof csrfToken !== 'undefined' && csrfToken) { %><input type="hidden" name="_csrf" value="<%= csrfToken %>"><% } %>
        <div class="form-row">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" required autocomplete="email" maxlength="254" placeholder="you@example.com">
        </div>
        <div class="form-row">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" required autocomplete="current-password" maxlength="256" placeholder="••••••••">
        </div>
        <button type="submit" class="btn btn--primary btn--block auth-form__submit">
          <svg class="icon" aria-hidden="true"><use href="#icon-login"/></svg> Log in
        </button>
      </form>
      <p class="auth-card__footer">
        Don't have an account? <a href="/register" class="auth-card__link">Register</a>
      </p>
    </div>
  </div>
<%- include('partials/footer') %>
